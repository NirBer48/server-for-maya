{
  "root": true,
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "settings": {
    "node": { "tryExtensions": [".js", ".json"] }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": "off"
  }
}
